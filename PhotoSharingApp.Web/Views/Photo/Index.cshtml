@model IEnumerable<PhotoIndexViewModel>

@{
    ViewBag.Title = "Llista de fotos";
}

<h2>List of photos</h2>

<p>
    @Html.ActionLink("Add a new Photo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PhotoFileID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhotoID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (item.PhotoFileID.HasValue)
                {
                    <img height="150" src="@Url.Action("GetImage", "Photo", new { id = item.PhotoID })" />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhotoID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.PhotoID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.PhotoID })
            </td>
        </tr>
    }

</table>
